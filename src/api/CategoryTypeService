import axiosInstance from './axiosInstance';

const API_URL = '/category-types';

export const getAllCategoryTypes = async () => {
  try {
    const response = await axiosInstance.get(API_URL);
    return response.data;
  } catch (error) {
    console.error('Error fetching category types', error);
    throw error;
  }
};

export const getCategoryTypeById = async (id) => {
  try {
    const response = await axiosInstance.get(`${API_URL}/${id}`);
    return response.data;
  } catch (error) {
    console.error('Error fetching category type', error);
    throw error;
  }
};

export const createCategoryType = async (categoryTypeDTO) => {
  try {
    const response = await axiosInstance.post(API_URL, categoryTypeDTO);
    return response.data;
  } catch (error) {
    console.error('Error creating category type', error);
    throw error;
  }
};

export const updateCategoryType = async (id, categoryTypeDTO) => {
  try {
    const response = await axiosInstance.put(`${API_URL}/${id}`, categoryTypeDTO);
    return response.data;
  } catch (error) {
    console.error('Error updating category type', error);
    throw error;
  }
};

export const deleteCategoryType = async (id) => {
  try {
    await axiosInstance.delete(`${API_URL}/${id}`);
  } catch (error) {
    console.error('Error deleting category type', error);
    throw error;
  }
};
